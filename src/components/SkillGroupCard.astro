---
import type { SkillGroup } from "../interfaces/SkillGroup";
interface Props extends SkillGroup {}

const { icon: Icon, name, technologies } = Astro.props;
---

<div
  class="flex flex-col bg-base-200 rounded-lg border-base-300 overflow-hidden transition-all duration-300 hover:-translate-y-1"
>
  <div
    class="text-lg md:text-xl font-semibold bg-[#5C6370] p-3 md:p-4 items-center gap-x-2"
  >
    <div class="flex flex-row items-center gap-x-2 ml-1 md:ml-2">
      <Icon class="size-8 md:size-10" />
      <span class="text-xl md:text-2xl font-bold text-white">{name}</span>
    </div>
  </div>
  <div class="p-3 md:p-4 grid grid-cols-2 sm:grid-cols-3 gap-3 md:gap-4">
    {
      technologies.map((tech) => {
        const TechIcon = tech.icon;
        return (
          <a 
            href={tech.url} 
            class="flex flex-col justify-center items-center transform hover:scale-110 transition-transform p-2" 
            target="_blank" 
            rel="noopener noreferrer"
          >
            <TechIcon class="size-10 md:size-12" />
            <span class="mt-1 md:mt-2 text-center font-medium text-xs md:text-xs leading-tight">{tech.name}</span>
          </a>
        );
      })
    }
  </div>
</div>
