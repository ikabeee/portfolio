---
const { id, title, icon: Icon, description } = Astro.props;
---

<section
  id={id}
  data-selection={id}
  class=`section scroll-m-20 mx-auto lg:max-w-6xl md:max-w-2xl items-center`
>
  {
    Icon && (
      <div class="flex flex-row mb-2 gap-x-2">
        <Icon class="size-11" />
        <span class="text-4xl font-bold">{title}</span>
      </div>
    )
  }
  <div>
    {description && <p class="mb-8 text-lg">{description}</p>}
  </div>
  <slot />
</section>
