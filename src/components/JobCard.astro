---
import type { Job } from "../interfaces/Job";
import Badge from "./Badge.astro";


interface Props extends Job {}

const {
  company,
  position,
  duration,
  location,
  type,
  description,
  technologies,
} = Astro.props;
---

<div class="ml-8">
  <div
    class="card bg-base-200 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
  >
    <div class="card-body">

      <div
        class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-1"
      >
        <div>
          <h3 class="card-title text-xl font-bold">{company}</h3>
          <p class="text-lg font-semibold text-[#569CDE]">{position}</p>
        </div>
        <div class="mt-2 sm:mt-0 sm:text-right">
          <span class="badge bg-[#569CDE] text-white badge-md font-medium"
            >{duration}
          </span>
          <p class="text-sm text-base-content/60 mt-1">{location}</p>
        </div>
      </div>

      <div class="mb-3">
        <Badge size="md" label={type} icon={null} />
      </div>

      <p class="text-base-content/80 mb-4">{description}</p>

      <div class="flex flex-wrap gap-2">
        {
          technologies.map((tech) => (
            <Badge key={tech.name} size="sm" label={tech.name} icon={tech.icon} />
          ))
        }
      </div>
    </div>
  </div>
</div>
