---
import { jobs } from "../constants/jobs"
import JobCard from "./JobCard.astro"
---

  <div class="max-w-6xl mx-auto px-6">
    <!-- Timeline -->
    <div class="relative max-w-4xl mx-auto">
      <!-- Vertical line -->
      <div class="absolute left-0 top-0 bottom-0 w-0.5 bg-[#569CDE]"></div>
      
      {jobs.map((job) => (
        <div class="relative mb-12 ">
          <!-- Timeline dot -->
          <div class="absolute left-0 w-3 h-3 bg-[#569CDE] rounded-full transform -translate-x-1/2 z-10 mt-6"></div>
          <!-- Content card -->
          <JobCard {...job} />
        </div>
      ))}
    </div>
  </div>