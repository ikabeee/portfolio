---
const { title, img, description, alt } = Astro.props;
---

<div class="card bg-base-300 shadow-lg hover:scale-105 transition-all duration-300 hover:-translate-y-1 card-compact md:card-side">
  <figure class="w-full md:w-56 aspect-video md:aspect-square">
    <img
      src={img}
      alt={alt}
      class="w-full h-full object-cover"
    />
  </figure>
  <div class="card-body p-4 md:p-6">
    <h2 class="card-title text-lg md:text-xl">{title}</h2>
    <p class="text-sm md:text-base leading-relaxed">{description}</p>
  </div>
</div>
