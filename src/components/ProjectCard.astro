---
const { title, img, description, alt } = Astro.props;
---

<div class="card card-side bg-base-300 shadow-lg hover:scale-105 transition-all duration-300 hover:-translate-y-1">
  <figure class="aspect-square w-56">
    <img
      src={img}
      alt={alt}
    />
  </figure>
  <div class="card-body">
    <h2 class="card-title">{title}</h2>
    <p>{description}</p>
  </div>
</div>
